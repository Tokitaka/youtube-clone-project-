extends ../base.pug

block content 
    video(src="/"+video.fileUrl, controls)
    div
        p=video.description
        small=video.createdAt
        br
        small=video.owner.username
    if String(video.owner._id) === String(loggedInUser._id) 
        a(href=`${video.id}/edit`) Edit Video &arr;
        br
        a(href=`${video.id}/delete`) Delete Video &arr;