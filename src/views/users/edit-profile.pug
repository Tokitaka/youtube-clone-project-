extends ../base

block content 
    form(method="POST", enctype="multipart/form-data").edit-profile__form
        label(for="avatar") Upload Avatar
        input(name="avatar", type="file", id="avatar", accept="image/*") 
        input(name="username", required, placeholder="Username", value=loggedInUser.username)
        input(name="name", required, placeholder="Name", value=loggedInUser.name)
        input(name="location", placeholder="Location", value=loggedInUser.location)
        input(value="Save", type="submit") 
        if !loggedInUser.socialOnly
            div.edit-profile__password
            a(href="/users/change-password") Change Password &rarr; 